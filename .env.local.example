# Database (Required)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/portfolio-hub"
# Alternative: Use local MongoDB
# DATABASE_URL="mongodb://localhost:27017/portfolio-hub"

# AI API Keys (Choose one or more - FREE OPTIONS PRIORITIZED)
# 1. Google Gemini (FREE with generous limits)
GOOGLE_API_KEY="your_google_gemini_api_key_here"

# 2. OpenRouter (FREE tier available + access to many models)
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# 3. Perplexity (PAID but affordable - $20/month)
PERPLEXITY_API_KEY="your_perplexity_api_key_here"

# 4. OpenAI (PAID - only if you have credits)
# OPENAI_API_KEY="your_openai_api_key_here"

# 5. Anthropic (PAID - only if you have credits)
# ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# Email Service (Optional - for contact form)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_gmail_app_password"

# EmailJS (Client-side contact notifications)
NEXT_PUBLIC_EMAILJS_SERVICE_ID="your_emailjs_service_id"
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID="your_emailjs_template_id"
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY="your_emailjs_public_key"

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="Portfolio Hub"

# NextAuth (Optional - for admin features)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_random_secret_string_here"

# Analytics (Optional)
NEXT_PUBLIC_GA_ID="your_google_analytics_id"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES="pdf,doc,docx"
