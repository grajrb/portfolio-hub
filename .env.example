# Copy to .env and fill in your credentials before running locally or deploying
# For MongoDB Atlas (recommended)
DATABASE_URL="mongodb+srv://<USER>:<PASSWORD>@<CLUSTER_HOST>/<DATABASE>?retryWrites=true&w=majority"

# Example replacements:
# <USER> -> myuser
# <PASSWORD> -> SuperS3cret (URL-encode special characters)
# <CLUSTER_HOST> -> cluster0.abcd123.mongodb.net
# <DATABASE> -> portfolio_db

# Any other env variables used by the app (examples):
# OPENAI_API_KEY=
# GOOGLE_API_KEY=VITE_EMAILJS_SERVICE_ID=your_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here
